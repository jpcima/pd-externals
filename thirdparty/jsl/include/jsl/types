// -*- C++ -*-
#pragma once
#include <complex>
#include <stdint.h>

typedef unsigned short ushort;
typedef unsigned int uint;
typedef unsigned long ulong;

typedef bool u1;

typedef int8_t i8;
typedef int16_t i16;
typedef int32_t i32;
typedef int64_t i64;
typedef uint8_t u8;
typedef uint16_t u16;
typedef uint32_t u32;
typedef uint64_t u64;

typedef int_fast8_t iFAST8;
typedef int_fast16_t iFAST16;
typedef int_fast32_t iFAST32;
typedef int_fast64_t iFAST64;
typedef uint_fast8_t uFAST8;
typedef uint_fast16_t uFAST16;
typedef uint_fast32_t uFAST32;
typedef uint_fast64_t uFAST64;

typedef intptr_t iPTR;
typedef intmax_t iMAX;
typedef uintptr_t uPTR;
typedef uintmax_t uMAX;

typedef float f32;
typedef double f64;
typedef std::complex<f32> c32;
typedef std::complex<f64> c64;
